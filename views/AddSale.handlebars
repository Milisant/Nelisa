{{#isAdmin}}
	<h1>Add a Sale</h1>
<form action="/sales/add" method="POST">
	Date:<input type="date" name="date">
	Product-name: 
	<select name="product_name">
		{{#products}}
		<option value="{{product_name}}">{{product_name}}</option>
		{{/products}}
	</select>
	Sales-price:<input type="number" name="sale_price" required><br />
	<br />
	No-Sold:<input type="number" name="no_sold" required>

	<input type="submit">
</form>
{{/isAdmin}}