{{#action}}
  <table class="table" id="SaleSearchResults">
	<tr>
		<th>Product-name</th>
		<th>Date</th>
		<th>Sales-price</th>
		<th>No-Sold</th>
	</tr>

	{{#Sale}}
	<tr>
		<td>{{product_name}}</td>
		<td>{{date}}</td>
		<td>{{no_sold}}</td>
		<td>{{sale_price}}</td>
	</tr>
	{{/Sale}}
 </table>
{{/action}}

{{#isAdmin}}
<table class="table" id="SaleSearchResults">
	<tr>
		<th>Product-name</th>
		<th>Date</th>
		<th>Sales-price</th>
		<th>No-Sold</th>
	</tr>

	{{#Sale}}
	<tr>
		<td>{{product_name}}</td>
		<td>{{date}}</td>
		<td>{{no_sold}}</td>
		<td>{{sale_price}}</td>
		<td><button><a href="/sales/edit/{{Id}}">Edit</a></button></td>
		<td><button><a href="/sales/delete/{{Id}}">Delete</a></button></td>
	</tr>
	{{/Sale}}
</table>
{{/isAdmin}}
